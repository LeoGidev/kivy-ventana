<DividedWindow>:
    cols: 2
    rows: 2
    padding: 10
    spacing: 10
    size: 2000, 1000
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size
    # Crear un GridLayout 2x2 dentro de la primera celda del Grid principal
    GridLayout:
        cols: 2  # 2 columnas en el sub-grid
        rows: 2  # 2 filas en el sub-grid
        size_hint: None, None
        size: 300, 300  # Tamaño fijo para el sub-grid
        Button:
            text: "Botón 1"
            size_hint: 0.5, 0.5  # Ocupa la mitad de la celda
        Button:
            text: "Botón 2"
            size_hint: 0.5, 0.5
        Button:
            text: "Botón 3"
            size_hint: 0.5, 0.5
        Button:
            text: "Botón 4"
            size_hint: 0.5, 0.5


    

    Label:
        id: label
        text: "Soy una Etiqueta"
        size_hint: 0.5, 0.5
        color: 1, 0, 0, 1  # Texto rojo

    TextInput:
        id: text_input
        hint_text: "Escribe algo aquí"
        size_hint: 0.5, 0.5
        background_color: 0.9, 0.9, 0.9, 1  # Fondo gris claro

    Slider:
        id: slider
        min: 0
        max: 100
        value: 50
        size_hint: 0.5, 0.5
        background_color: 0.3, 0.8, 0.3, 1  # Color verde

