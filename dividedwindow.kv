<DividedWindow>:
    cols: 2
    rows: 2
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fondo blanco
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        id: button
        text: "Soy un Botón 1"
        size_hint: 0.5, 0.5
        background_color: 0.2, 0.6, 0.8, 1  # Color de fondo azul claro
    Button:
        id: button2
        text: "Botón 2"
        size_hint: 0.5, 0.5
    Button:
        id: button3
        text: "Botón 3"
        size_hint: 0.5, 0.5
    Button:
        id: button4
        text: "Botón 4"
        size_hint: 0.5, 0.5

    Label:
        id: label
        text: "Soy una Etiqueta"
        size_hint: 0.5, 0.5
        color: 1, 0, 0, 1  # Texto rojo

    TextInput:
        id: text_input
        hint_text: "Escribe algo aquí"
        size_hint: 0.5, 0.5
        background_color: 0.9, 0.9, 0.9, 1  # Fondo gris claro

    Slider:
        id: slider
        min: 0
        max: 100
        value: 50
        size_hint: 0.5, 0.5
        background_color: 0.3, 0.8, 0.3, 1  # Color verde

